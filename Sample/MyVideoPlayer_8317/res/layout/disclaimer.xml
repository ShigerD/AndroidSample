<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disclaimer"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@*android:drawable/default_wallpaper"
    android:paddingTop="@*android:dimen/status_bar_height"
    android:gravity="center"
    >
    
    <ImageView 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@drawable/disclaimer_bg"
        android:layout_centerInParent="true"
        />
    
    <TextView
        android:id="@+id/disclaimer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lineSpacingExtra="20dip"
        android:text="@*android:string/disclaimer_message"
        android:textColor="@android:color/white"
        android:textSize="@*android:dimen/prompt_message_text_size" />
</RelativeLayout>
